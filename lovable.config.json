{
  "projectName": "EduCommunity",
  "description": "Plataforma de aprendizaje NoCode + IA con sistema de diseño híbrido",
  "framework": "vite",
  "language": "typescript",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "outputDirectory": "dist",
  "environmentVariables": {
    "VITE_SUPABASE_URL": "tu_url_de_supabase",
    "VITE_SUPABASE_ANON_KEY": "tu_anon_key_de_supabase"
  },
  "syncInstructions": {
    "cursorToLovable": [
      "1. Desarrolla en Cursor.ai",
      "2. git add .",
      "3. git commit -m 'Update: descripción'",
      "4. git push origin main",
      "5. Lovable detectará cambios automáticamente"
    ],
    "lovableToCursor": [
      "1. Desarrolla en Lovable",
      "2. Lovable auto-commit a GitHub",
      "3. En Cursor.ai: git pull origin main",
      "4. Continúa desarrollo"
    ]
  },
  "features": {
    "hybridDesignSystem": true,
    "dashboard": true,
    "community": true,
    "courseLearning": true,
    "authentication": true,
    "responsiveDesign": true
  },
  "techStack": {
    "frontend": ["React", "TypeScript", "Vite", "Tailwind CSS", "Framer Motion"],
    "backend": ["Supabase", "PostgreSQL", "Auth", "Storage"],
    "deployment": ["Lovable", "GitHub"]
  }
} 